<% layout("layouts/boilerplate") %>

    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="card mb-3">
                    <img src="<%=selectedCourse.image%>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=selectedCourse.name%>
                        </h5>
                        <p class="card-text">
                            <%=selectedCourse.description%>
                        </p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item text-muted">
                            <%=selectedCourse.location%>
                        </li>
                        <li class="list-group-item">Submitted by
                            <%=selectedCourse.author.username%>
                        </li>
                        <li class="list-group-item">Green Fee $<%= selectedCourse.price%>
                    </ul>
                    <% if(currentUser && selectedCourse.author.equals(currentUser._id)) {%>
                        <div class="card-body">
                            <a class="card-link btn btn-primary" href="/courses/<%=selectedCourse._id%>/edit">Edit</a>
                            <form class="d-inline" action="/courses/<%=selectedCourse._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                        <% } %>
                </div>
            </div>
            <div class="col-6">
                <% if (currentUser) { %>
                    <h2>Leave a Review</h2>
                    <form class="mb-3 validated-form" action="/courses/<%= selectedCourse._id %>/reviews" method="POST"
                        novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="rating">Rating</label>
                            <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="body">Review</label>
                            <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3"
                                required></textarea>
                        </div>
                        <button class="btn btn-success">Submit</button>
                    </form>
                    <% } %>
                        <% for (let review of selectedCourse.reviews){ %>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        Rating: <%= review.rating %>
                                    </h5>
                                    <h6 class="card-subtitle mb-2 text-muted">by <%= review.author.username %>
                                    </h6>
                                    <p class="card-text">
                                        Review: <%= review.body %>
                                    </p>
                                    <% if(currentUser && review.author.equals(currentUser._id)) {%>
                                        <form
                                            action="/courses/<%=selectedCourse._id%>/reviews/<%=review._id%>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                        <%} %>
                                </div>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>