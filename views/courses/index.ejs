<% layout("layouts/boilerplate") %>

    <h1>All Courses</h1>
    <% for (let course of allCourses) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=course.images[0].url%>" class="img-fluid" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=course.name%>
                        </h5>
                        <p class="card-text">
                            <%=course.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=course.location%>
                            </small>
                        </p>
                        <a href="/courses/<%=course._id%>" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
        <%}%>